<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SpacedRepetition</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/9ae32e5ddb.js" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse fixed-nav-bar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HuYu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Decks", "Index", "Deck")</li>
                        <li>@Html.ActionLink("Review", "Index", "Review")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="page-container">

        <div id="content-wrap">
            <div class="container">
                @RenderBody()
            </div>
        </div>
        <footer class="footer">
            <div style="background-color: darkgray;">
                <div class="row row-no-gutters">
                    <div class="btn-group-justified" role="group">
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home", null, new { @class = "btn btn-primary btn-footer" })
                        </div>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Terms of Service", "Index", "Home", null, new { @class = "btn btn-primary btn-footer" })
                        </div>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Contact", "Index", "Home", null, new { @class = "btn btn-primary btn-footer" })
                        </div>
                    </div>
                </div>
                <div class="container">
                    <hr />
                    <div style="float:left;">
                        <a href="#">
                            <i class="fab fa-linkedin fa-2x"></i>
                        </a>
                        <a href="#">
                            <i class="fab fa-twitter-square fa-2x"></i>
                        </a>
                        <a href="#">
                            <i class="fab fa-instagram-square fa-2x"></i>
                        </a>
                    </div>
                    <p class="text-uppercase" style="float:right;">&copy; 2020 HuYu</p>
                    @Html.ActionLink("Admin Portal", "Index", "Admin", null, new { @style = "float: right; margin-right: 10px" })
                </div>
            </div>
        </footer>
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>